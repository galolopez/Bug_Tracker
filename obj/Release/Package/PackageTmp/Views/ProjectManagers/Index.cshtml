@model IEnumerable<Bug_Tracker.Models.ProjectViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Assign/Unassign Project Managers to/from Projects</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Projects")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @Html.HiddenFor(modelItem => item.Id)
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Assign PM to Projects", "AssignProjectManager", "ProjectManagers", new { id = item.Id }, null) |
                @Html.ActionLink("View / Unassigned PM", "UnassignProjectManager", "ProjectManagers", new { id = item.Id }, null) |
            </td>
        </tr>
    }
</table>
