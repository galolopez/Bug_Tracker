@model IEnumerable<Bug_Tracker.Models.UserRolesViewModel>

@{
    ViewBag.Title = "Role Assignments";
}

<div class="container" style="padding-right: 500px; padding-top: 50px">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <center><p style="font-weight: bold; font-size: x-large">ROLE ASSIGNMENTS</p></center>
        </div>
        <table class="table table-hover">
            <tr></tr>

            @foreach (var item in Model)
            {
                <tr>
                    @Html.HiddenFor(modelItem => item.RoleId)
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                    <td style="align-content: flex-end">
                        @Html.ActionLink("Assign/Unassign Users", "RoleAssignations", "Roles", new { id = item.RoleId }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>