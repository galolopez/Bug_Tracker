<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scorpion Bugtracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <link rel="shortcut icon" href="~/FileUploads/scorpion4.png" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("Dashboard", "Home")">
                            <img src="~/FileUploads/scorpion4.png" height="25">
                        </a>
                    </li>
                    @Html.ActionLink("Scorpion", "Dashboard", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </ul>
            </div>
            @if (ViewContext.HttpContext.User.IsInRole("Admin"))
            { 
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Tickets", "Index", "Tickets")</li>
                        <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                        <li>@Html.ActionLink("Roles", "Index", "Roles")</li>
                    </ul>                
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="@Url.Action("Dashboard", "Home")">
                                <img src="~/FileUploads/globe.png" height="20" title="Notifications">
                                <span class="badge bg-danger" id="notifications"></span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "TicketHistories")">
                                <img src="~/FileUploads/book3.png" height="21" title="Ticket History">
                            </a>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            }
            else if (ViewContext.HttpContext.User.IsInRole("Project Manager"))
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Tickets", "Index", "Tickets")</li>
                        <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="@Url.Action("Dashboard", "Home")">
                                <img src="~/FileUploads/globe.png" height="20" title="Notifications">
                                <span class="badge bg-danger" id="notifications"></span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "TicketHistories")">
                                <img src="~/FileUploads/book3.png" height="21" title="Ticket History">
                            </a>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            }
            else if (ViewContext.HttpContext.User.IsInRole("Developer"))
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Tickets", "Index", "Tickets")</li>
                        <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="@Url.Action("Dashboard", "Home")">
                                <img src="~/FileUploads/globe.png" height="20" title="Notifications">
                                <span class="badge bg-danger" id="notifications"></span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "TicketHistories")">
                                <img src="~/FileUploads/book3.png" height="21" title="Ticket History">
                            </a>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            }
            else if (ViewContext.HttpContext.User.IsInRole("Submitter"))
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Tickets", "Index", "Tickets")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="@Url.Action("Dashboard", "Home")">
                                <img src="~/FileUploads/globe.png" height="20" title="Notifications">
                                <span class="badge bg-danger" id="notifications"></span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "TicketHistories")">
                                <img src="~/FileUploads/book3.png" height="21" title="Ticket History">
                            </a>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            }
            else if (ViewContext.HttpContext.User.IsInRole("AdminTest"))
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Tickets", "Index", "Tickets")</li>
                        <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                        <li>@Html.ActionLink("Roles", "Index", "Roles")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="@Url.Action("Dashboard", "Home")">
                                <img src="~/FileUploads/globe.png" height="20" title="Notifications">
                                <span class="badge bg-danger" id="notifications"></span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "TicketHistories")">
                                <img src="~/FileUploads/book3.png" height="21" title="Ticket History">
                            </a>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            }
            else
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="@Url.Action("Dashboard", "Home")">
                                <img src="~/FileUploads/globe.png" height="20" title="Notifications">
                                <span class="badge bg-danger" id="notifications"></span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "TicketHistories")">
                                <img src="~/FileUploads/book3.png" height="21" title="Ticket History">
                            </a>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Galo @DateTime.Now.Year - Scorpion Bugtracker</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>

<script>
    $(document).ready(function () {
        var url = '@Url.Action("GetNotifications", "Home")';
        var postData = { name: '@User.Identity.Name' };

        $.post(url, postData, function (data) {
            $('#notifications').text(data);
            return;
        });
    });
</script>
